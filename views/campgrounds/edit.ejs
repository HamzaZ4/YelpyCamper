<% layout('./layouts/boilerplate') %>

  <div class="row">
    <h1 class="text-center">New Campgroud</h1>
    <div class="col-6 offset-3">
      <form action="/campgrounds/<%=campground.id %>?_method=PUT" method="POST" class="needs-validation" novalidate enctype="multipart/form-data">
        <div class="mb-3">
          <label class="form-label"for="title">Enter the name of the campground:</label>
          <input class="form-control" type="text" name="campground[title]" id="title" value="<%=campground.title%>" required>
        </div>
        
        <div class="mb-3">
          <label class ="form-label"for="location">Where is this campground(city, province):</label>
          <input class="form-control"type="text" name="campground[location]" id="location" value="<%=campground.location%>" required>
        </div>
  
        <div class="mb-3">
            <label class ="form-label"for="image">Add Images:</label>
            <div class="input-group mb-3">
              <input type="file" class="form-control" id="image" name="image">
            </div>
          
        </div>

        

        <div class="mb-3">
  
          <label form="Price">Enter Price(/night):</label>
          <div class="input-group">
          
          <span class="input-group-text" id="price-label">$</span>
          <input type="text" class="form-control" name="campground[price]" value="<%=campground.price%>" placeholder="0.00" aria-label="Price" aria-describedby="price-label" required>
        </div>
  
        </div>
        
  
        <div class="mb-3">
          <label class ="form-label"for="description">Description:</label>
          <textarea class="form-control"type="text" name="campground[description]" <%=campground.description%> id="description" required><%=campground.description%></textarea>
        </div>
  
        <div class="mb-3">
          <h3>Delete images:</h3>
          <% campground.images.forEach((img,i)=>{ %>
            <img src="<%= img.url %>" alt="" class="img-thumbnail d-inline">
            <div class="form-check-inline">
              <input type="checkbox" name="deleteImages[]" id="img-<%=i%>" value='<%=img.filename %>'>
            </div>
            <label for="img-<%=i%>">Select</label>
         <% }) %>
        </div>
        <div class="mb-3">
          <button class="btn btn-info">Update</button>
        </div>
        
      </form>


      <div class="mb-3">
        <form action="/campgrounds/<%=campground._id%>?_method=DELETE" method="POST">
        <button class="btn btn-danger">Delete Campground</button>
      </form>
      </div>


      <div class="mb-3">
        <a href="/campgrounds" >Cancel</a>
      </div>


      
      
    </div>
  </div>


  