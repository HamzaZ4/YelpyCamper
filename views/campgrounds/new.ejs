<% layout('./layouts/boilerplate') %>
<div class="row">
  <h1 class="text-center">New Campgroud</h1>
  <div class="col-6 offset-3">
    <form action="/campgrounds" method="POST" novalidate class="needs-validation" enctype="multipart/form-data">
      <div class="mb-3">
        <label class="form-label"for="title">Enter the name of the campground:</label>
        <input class="form-control" type="text" name="campground[title]" id="title" required>
      </div>
      
      <div class="mb-3">
        <label class ="form-label"for="location">Where is this campground(city, province):</label>
        <input class="form-control"type="text" name="campground[location]" id="location" required>
      </div>


      
      
      <label for="image">Upload images:</label>
      <div class="mb-3">
        <input class="form-control" type="file" id="image" name="image" multiple>
      </div>


      <div class="mb-3">

        <label form="Price">Enter Price(/night):</label>
        <div class="input-group">
        
        <span class="input-group-text" id="price-label">$</span>
        <input type="text" class="form-control" name="campground[price]" placeholder="0.00" aria-label="Price" aria-describedby="price-label" required>
      </div>

      </div>
      

      <div class="mb-3">
        <label class ="form-label"for="description">Description:</label>
        <textarea class="form-control"type="text" name="campground[description]" id="description" required></textarea>
      </div>

      <div class="mb-3">
        <button class="btn btn-success">Add Campground</button>
      </div>
      
    </form>
    
    <a href="/campgrounds">Cancel</a>
    
    
  </div>
</div>

